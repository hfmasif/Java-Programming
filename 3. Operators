package basicProgramming;

public class Operator {

	public static void main(String[] args) {

//		1) Arithmetic operators + - * / %
//		int a = 20, b = 10;
//		int sum = a+b;
//		System.out.println("Addition of a and b = "+sum);
//		System.out.println("Subtraction of a and b = "+(a-b));
//		System.out.println("Multiplication of a and b = "+(a*b));
//		System.out.println("Division of a and b = "+(a/b));
//		System.out.println("Modulus of a and b = "+(a%b));
		
		
		
//		2) Relational/comparison operators > >= < <= != == 
//		-Returns boolean value - true/false 
//		int a = 20, b = 10;
//		System.out.println(a>b); // true
//		System.out.println(a<b); // false
//		System.out.println(a>=b); // true
//		System.out.println(a<=b); // false
//		b = 20;
//		System.out.println(a<=b); // true
//		System.out.println(a>=b); // true
//		System.out.println(a!=b); // false
//		System.out.println(a==b); // true
//		boolean res = a>b;
//		System.out.println(res);
		
		
		
//		3) Logical operators && || !
		// returns boolean value - true/false
		// works between 2 boolean values
//		boolean x = true;
//		boolean y = false;
//		System.out.println(x && y); // false
//		System.out.println(x || y); // true
//		System.out.println(!x); // false
//		System.out.println(!y); // true
//		boolean b1 = 10>20;
//		System.out.println(b1); // false
//		boolean b2 = 20>10;
//		System.out.println(b2); // true
//		System.out.println(b1 && b2); // false
//		System.out.println(b1 || b2); // true
//		System.out.println((10<20) && (20>10)); // true
		
		
		
//		4) Increment & Decrement operators ++ --
		// ----------------Increment------------
		// case 1
//		int a = 10;
//		System.out.println(a); // 10
//		a++;      // a = a+1
//		System.out.println(a); // 11
		
		// case 2 - post increment operation
//		int a = 10;
//		int res = a++;
//		System.out.println(res); // 10
//		System.out.println(a); // 11
		
		// case 3 - pre increment
//		int a = 10;
//		int res = ++a;
//		System.out.println(res); // 11
//		System.out.println(a); // 11
		
		//-----------------Decrement-------------
		// case 1
//		int a = 10;
//		a--; // a = a-1
//		System.out.println(a); // 9
		
		// case 2 - post decrement
//		int a = 100;
//		int res = a--;
//		System.out.println(res); // 100
//		System.out.println(a); // 99
		
		// case 3 - pre decrement
//		int a = 100;
//		int res = --a;
//		System.out.println(res); // 99
//		System.out.println(a); // 99
		
		
		
//		5) Assignment operators = += -+ *= /= %=
		// Ex:1
//		int a = 10, b = 10;
//		a+=5; // a = a+5
//		System.out.println(a);
//		b-=5; // b = b-5
//		System.out.println(b);
//		
//		// Ex:2
//		int x = 10;
//		x*=2;
//		System.out.println(x);
//		
//		// Ex:3
//		int y = 10;
//		y/=2;
//		System.out.println(y);
//		// Ex:4
//		int i = 10;
//		i%=2;
//		System.out.println(i);
		
		
		
//		6) conditional/ternary operator ?:
		/* syntax:
		 * var = exp ? result1 : result2;
		*/
		
		// Ex-1
		int a = 200, b = 100;
		int max = (a<b) ? a : b;
		System.out.println(max); // 100
		
		// Ex-2
		int x = (1!=1)?100:200;
		System.out.println(x); // 200
		
		int i = (1==2)?200:100;
		System.out.println(i); // 100
		
		// Ex-3
		int person_age = 30;
		String res = (person_age >= 18) ? "Eligible" : "Not Eligible";
		System.out.println(res);
		
		
		
		
//		Unary operators(1 variable required) ++ -- += -= *= /+ %= = !
//		Binary operators(2 variables needed) + - * % / > < >= <= != == && ||
//		Ternary operator(3 variables required)
		
		
		
		
	}

}
